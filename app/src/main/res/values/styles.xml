<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>

    <style name="SplashTheme" parent ="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="calendarDateTextAppearance" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="calendarDateTextAppearanceDisable" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/grayTitle</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="calendarheadTextAppearance" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/mainColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="datepicker" parent="@android:style/Widget.DatePicker">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/mainColor</item>
    </style>

    <style name="DialogStyle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorPrimaryDark">@color/background</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/background_dialog</item>
    </style>

    <style name="checkbox" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/mainColor</item> <!-- for uncheck state -->
        <item name="android:textColorSecondary">@color/mainColor</item> <!-- for check state -->
    </style>

    <style name="styleSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/mainColor</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/white
        </item>
    </style>

    <style name="MyBase.TimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/barColor</item>
        <item name="android:headerBackground">@color/barColor</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="DialogTheme">
        <item name="colorAccent">@color/background</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="checkbox_filter" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/mainColor</item> <!-- for uncheck state -->
        <item name="android:textColorSecondary">@color/grayTitle</item> <!-- for check state -->
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/mainColor</item>
        <item name="colorPrimary">@color/white</item>
    </style>
    <style name="CustomCalendarMonth" parent="AppTheme">
        <item name="colorAccent">@color/mainColor</item>
        <item name="android:textColorPrimary">@color/mainColor</item>
    </style>
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:weekNumberColor">@color/mainColor</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/mainColor</item>
    </style>
    <style name="ScanerView" parent="Theme.AppCompat">
        <item name="colorAccent">@color/mainColor</item>
        <item name="colorPrimary">@color/mainColor</item>

    </style>



</resources>
