<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:id="@+id/backButtonConfirmOTP"
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="3dp"
                android:src="@drawable/back_icon" />
        </RelativeLayout>

        <TextView
            android:id="@+id/titleConfirmOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Nhập mã xác thực"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_centerInParent="true"
        android:id="@+id/bodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar">
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/bodyOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/code1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/conner_layout">

                <EditText
                    android:id="@+id/code1Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="1"
                    android:nextFocusForward="@id/code2Txt"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/textHint"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/code2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/code1"
                android:background="@drawable/conner_layout">

                <EditText
                    android:id="@+id/code2Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="1"
                    android:nextFocusForward="@id/code3Txt"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/textHint"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/code3"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/code2"
                android:background="@drawable/conner_layout">

                <EditText
                    android:id="@+id/code3Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="1"
                    android:nextFocusForward="@id/code4Txt"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/textHint"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/code4"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/code3"
                android:background="@drawable/conner_layout">

                <EditText
                    android:id="@+id/code4Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="1"
                    android:nextFocusForward="@id/code5Txt"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/textHint"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/code5"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/code4"
                android:background="@drawable/conner_layout">

                <EditText
                    android:id="@+id/code5Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="1"
                    android:nextFocusForward="@id/code6Txt"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/textHint"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/code6"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_toEndOf="@+id/code5"
                android:background="@drawable/conner_layout">

                <EditText
                    android:id="@+id/code6Txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@color/textHint"
                    android:textCursorDrawable="@null"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/bodyOTP"
            android:id="@+id/otpAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/otpAlertTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Mã OTP sẽ hết hạn sau 170 giây"
                android:textColor="@color/white" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/otpAlert"
            android:id="@+id/resendOTPlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/resendOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Gửi lại mã"
                android:textColor="@color/green" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/resendOTPlayout"
            android:id="@+id/sentOTPTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/notifyOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Mã xác thực đã được gửi đến số điện thoại của bạn"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/nextConfirmOTP"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/conner_button_login"
        android:text="Tiếp tục"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15sp" />
</RelativeLayout>