<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_530sdp"
    android:background="@drawable/bottom_sheet_background"
    >

    <RelativeLayout
       android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/container_treeview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_480sdp"/>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/confirmFilterCam"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="27dp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/conner_button_login"
            android:text="@string/confirmPass"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

    </RelativeLayout>



</RelativeLayout>